---
interface Service {
  title: string;
  description: string;
  link: string;
}

interface Props {
  title: string;
  services: Service[];
}

const { title, services } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4 text-accent">{title}</h2>
  <div class="grid gap-4">
    {services.map(service => (
      <a 
        href={service.link}
        class="block p-4 bg-light rounded-lg hover:bg-gray-200 transition-colors"
      >
        <h3 class="font-bold mb-2">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </a>
    ))}
  </div>
</div>