---
import { serviceCategories } from '../data/services';

const categories = Object.entries(serviceCategories).map(([key, value]) => ({
  id: key,
  title: value.title,
  url: `/services/${key}`
}));
---

<div class="bg-white p-4 rounded-lg shadow-md">
  <h2 class="text-xl font-bold mb-4 text-primary">Cat√©gories de services</h2>
  <nav class="space-y-2">
    {categories.map(category => (
      <a
        href={category.url}
        class="block px-4 py-2 rounded-lg hover:bg-light hover:text-accent transition-colors"
      >
        {category.title}
      </a>
    ))}
  </nav>
</div>