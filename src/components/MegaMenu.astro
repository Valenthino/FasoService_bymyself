---
import { megaMenu } from '../data/menuData';

interface Props {
  isOpen: boolean;
  category: string;
}

const { isOpen, category } = Astro.props;
const menuData = megaMenu[category];
---

{isOpen && menuData && (
  <div class="absolute left-0 w-full bg-white shadow-lg z-50 border-t border-gray-200">
    <div class="container mx-auto px-4 py-6">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {menuData.sections.map((section) => (
          <div>
            <h3 class="font-bold text-lg mb-4 text-accent">{section.title}</h3>
            <ul class="space-y-2">
              {section.links.map((link) => (
                <li>
                  <a 
                    href={link.url}
                    class="text-gray-600 hover:text-accent transition-colors"
                  >
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>
)}