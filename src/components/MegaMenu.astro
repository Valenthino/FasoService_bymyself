---
// src/components/MegaMenu.astro
import { megaMenu } from '../data/menuData';

const categories = Object.keys(megaMenu);
---

<div class="bg-[#26374A] text-white border-b border-gray-700">
  <div class="container mx-auto">
    <nav class="flex justify-center">
      {categories.map(category => (
        <div class="group relative">
          <button class="px-6 py-4 hover:bg-[#1a2736] transition-colors flex items-center gap-2">
            <span>{megaMenu[category].title}</span>
            <svg 
              class="w-4 h-4 transition-transform group-hover:rotate-180" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <div class="absolute left-0 w-screen invisible group-hover:visible opacity-0 group-hover:opacity-100 bg-white shadow-xl">
            <div class="container mx-auto py-8">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-8 px-4">
                {megaMenu[category].sections.map(section => (
                  <div>
                    <h3 class="font-bold text-lg mb-4 text-[#26374A]">
                      {section.title}
                    </h3>
                    <ul class="space-y-2">
                      {section.links.map(link => (
                        <li>
                          <a 
                            href={link.url}
                            class="text-gray-600 hover:text-[#26374A] hover:bg-gray-50 block px-3 py-2 rounded-md transition-colors"
                          >
                            {link.title}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </nav>
  </div>
</div>

<style>
.group:hover .group-hover\:visible {
  visibility: visible;
}
</style>