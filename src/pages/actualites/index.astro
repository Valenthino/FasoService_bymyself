---
import Layout from '../../layouts/Layout.astro';

const news = [
  {
    title: "Réunion du Conseil des ministres",
    date: "2024-01-10",
    summary: "Adoption de nouvelles mesures pour le développement rural",
    content: "Le Conseil des ministres s'est réuni ce mercredi sous la présidence du Chef de l'État. Plusieurs décrets ont été adoptés concernant le développement rural et l'agriculture."
  },
  {
    title: "Programme national de vaccination",
    date: "2024-01-08",
    summary: "Lancement de la campagne nationale de vaccination",
    content: "Le Ministère de la Santé annonce le lancement d'une nouvelle campagne de vaccination gratuite pour les enfants de 0 à 5 ans."
  },
  {
    title: "Infrastructure routière",
    date: "2024-01-05",
    summary: "Début des travaux sur l'axe Ouaga-Bobo",
    content: "Les travaux de réhabilitation de l'axe Ouagadougou-Bobo-Dioulasso débuteront le 15 janvier 2024."
  }
];
---

<Layout title="Actualités">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-primary">Actualités gouvernementales</h1>
    <div class="space-y-6">
      {news.map(article => (
        <article class="bg-white p-6 rounded-lg shadow-md">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-2xl font-bold text-accent">{article.title}</h2>
            <time class="text-sm text-gray-500">{article.date}</time>
          </div>
          <p class="text-gray-700 mb-4">{article.summary}</p>
          <p class="text-gray-600">{article.content}</p>
        </article>
      ))}
    </div>
  </main>
</Layout>