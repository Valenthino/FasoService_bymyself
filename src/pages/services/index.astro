---
import Layout from '../../layouts/Layout.astro';
import ServiceNavigation from '../../components/ServiceNavigation.astro';
import { serviceCategories } from '../../data/services';

const categories = Object.entries(serviceCategories);
---

<Layout title="Services Gouvernementaux">
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <aside>
        <ServiceNavigation />
      </aside>
      
      <div class="md:col-span-3">
        <h1 class="text-4xl font-bold mb-8 text-primary">Services Gouvernementaux</h1>
        
        <div class="grid gap-6">
          {categories.map(([key, category]) => (
            <a href={`/services/${key}`} class="block bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
              <h2 class="text-2xl font-bold mb-2 text-accent">{category.title}</h2>
              <p class="text-gray-700">{category.services.length} services disponibles</p>
            </a>
          ))}
        </div>
      </div>
    </div>
  </main>
</Layout>