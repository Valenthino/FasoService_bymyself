---
import Layout from '../../layouts/Layout.astro';
import ServiceCategory from '../../components/ServiceCategory.astro';
import { citizenServices, popularServices } from '../../data/citizenServices';
---

<Layout title="Services aux citoyens">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-primary">Services aux citoyens</h1>

    <!-- Services les plus demandés -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Services les plus demandés</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {popularServices.map(service => (
          <a 
            href={service.link}
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow"
          >
            <h3 class="text-xl font-bold mb-2">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </a>
        ))}
      </div>
    </section>

    <!-- Tous les services par catégorie -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {Object.entries(citizenServices).map(([key, category]) => (
        <ServiceCategory 
          title={category.title}
          services={category.services}
        />
      ))}
    </div>
  </main>
</Layout>