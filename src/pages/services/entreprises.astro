---
import Layout from '../../layouts/Layout.astro';
import ServiceCategory from '../../components/ServiceCategory.astro';
import { businessServices } from '../../data/businessServices';

const popularServices = [
  {
    title: "Création d'entreprise en ligne",
    description: "Créez votre entreprise en quelques clics",
    link: "/services/commerce/creation-entreprise"
  },
  {
    title: "Déclarations fiscales",
    description: "Effectuez vos déclarations fiscales en ligne",
    link: "/services/fiscalite/declarations"
  },
  {
    title: "Marchés publics",
    description: "Consultez les appels d'offres publics",
    link: "/services/marches/appels-offres"
  }
];
---

<Layout title="Services aux entreprises">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-primary">Services aux entreprises</h1>

    <!-- Services populaires -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Services les plus utilisés</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {popularServices.map(service => (
          <a 
            href={service.link}
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow"
          >
            <h3 class="text-xl font-bold mb-2">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </a>
        ))}
      </div>
    </section>

    <!-- Catégories de services -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {Object.entries(businessServices).map(([key, category]) => (
        <ServiceCategory 
          title={category.title}
          services={category.services}
        />
      ))}
    </div>
  </main>
</Layout>