---
import Layout from '../../layouts/Layout.astro';
import { nationalSymbols } from '../../data/government';

const { armoiries, colors } = nationalSymbols;
---

<Layout title="Symboles Nationaux">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-primary">Symboles Nationaux</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-accent">Les Armoiries</h2>
        <img src="/logo.svg" alt="Armoiries du Burkina Faso" class="w-48 mx-auto mb-6" />
        <p class="text-gray-700 mb-6">{armoiries.description}</p>
        
        <h3 class="font-bold mb-2">Signification des éléments</h3>
        <ul class="space-y-2">
          {armoiries.elements.map(element => (
            <li>
              <span class="font-semibold">{element.name}:</span>
              <span class="text-gray-700"> {element.meaning}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-accent">Les Couleurs Nationales</h2>
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="w-8 h-8 bg-red-600 rounded"></div>
            <p class="text-gray-700">Rouge : {colors.red}</p>
          </div>
          <div class="flex items-center space-x-4">
            <div class="w-8 h-8 bg-green-600 rounded"></div>
            <p class="text-gray-700">Vert : {colors.green}</p>
          </div>
          <div class="flex items-center space-x-4">
            <div class="w-8 h-8 bg-yellow-400 rounded"></div>
            <p class="text-gray-700">Jaune : {colors.yellow}</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>